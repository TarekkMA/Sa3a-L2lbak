<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tmaproject.sa3al2lbak.NewJokeFragment"
    android:orientation="vertical"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:orientation="vertical"
      >
    <TextView
        android:id="@+id/joke.text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="16dp"
        style="@style/JokeTextView"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom|center"
        >
      <android.support.design.widget.FloatingActionButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:fabSize="normal"
          android:src="@drawable/dislike_48"
          app:useCompatPadding="true"
          />
      <android.support.design.widget.FloatingActionButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:fabSize="normal"
          android:src="@drawable/like_48"
          app:useCompatPadding="true"
          />
      <android.support.design.widget.FloatingActionButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:fabSize="normal"
          android:src="@drawable/star_48"
          app:useCompatPadding="true"
          />
    </LinearLayout>

  </LinearLayout>

  <include layout="@layout/ad_layout_banner1" />

</LinearLayout>
